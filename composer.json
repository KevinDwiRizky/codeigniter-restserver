{
    "name": "chriskacerguis/codeigniter-restserver",
    "description": "CI Rest Server",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Chris Kacerguis",
            "email": "chriskacerguis@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {"chriskacerguis\\RestServer\\": "src/"}
    },
    "require": {
        "codeigniter4/framework": "^4.5"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.9",
        "phpstan/phpstan": "^1.12",
        "phpunit/phpunit": "^10.5 || ^11.0"
    },
    "scripts": {
        "lint": "phpcs --standard=phpcs.xml",
        "stan": "phpstan analyse src -c phpstan.neon.dist",
        "test": "phpunit -c phpunit.xml.dist --testdox"
    },
    "extra": {
        "ci4": {
            "discover": true
        }
    }
}
